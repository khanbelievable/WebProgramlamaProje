@{
    ViewData["Title"] = "AI Egzersiz nerisi";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-info text-white">
                <h4 class="mb-0"><i class="bi bi-robot"></i> AI Egzersiz Asistan覺</h4>
            </div>
            <div class="card-body p-4">
                <p>Hedefinizi ve seviyenizi se癟in, size 繹zel egzersiz 繹nerimizi haz覺rlayal覺m.</p>
                
                <div class="mb-3">
                    <label class="form-label fw-bold">Hedefiniz</label>
                    <select id="goal" class="form-select">
                        <option value="kilo verme">Kilo Vermek</option>
                        <option value="kas k羹tlesi">Kas K羹tlesi Art覺rmak</option>
                        <option value="genel sagl覺k">Genel Sal覺k ve Zindelik</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Seviyeniz</label>
                    <select id="level" class="form-select">
                        <option value="baslangic">Balang覺癟</option>
                        <option value="orta">Orta</option>
                        <option value="ileri">襤leri</option>
                    </select>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-bold">Kiisel Notlar / zel 襤stekler</label>
                    <textarea id="notes" class="form-control" rows="3" placeholder="rn: Bel f覺t覺覺m var, sadece evde 癟al覺abilirim, dizlerimi zorlamas覺n..."></textarea>
                </div>

                <div class="d-grid mb-4">
                    <button id="getSuggestion" class="btn btn-info text-white btn-lg"> AI neri Olutur</button>
                </div>

                <div id="resultCard" class="card bg-light d-none">
                    <div class="card-body">
                        <h5 class="card-title text-info"><i class="bi bi-lightbulb"></i> nerilen Plan:</h5>
                        <div id="suggestionText" class="card-text lead" style="white-space: pre-line;"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('getSuggestion').addEventListener('click', async function() {
            const goal = document.getElementById('goal').value;
            const level = document.getElementById('level').value;
            const notes = document.getElementById('notes').value;
            
            const suggestionText = document.getElementById('suggestionText');
            suggestionText.innerHTML = '<div class="text-center"><div class="spinner-border text-info"></div><p class="mt-2">AI plan覺n覺z覺 haz覺rl覺yor...</p></div>';
            document.getElementById('resultCard').classList.remove('d-none');
            
            try {
                const response = await fetch(`/api/WorkoutSuggestions?goal=${encodeURIComponent(goal)}&level=${encodeURIComponent(level)}&notes=${encodeURIComponent(notes)}`);
                const data = await response.json();
                suggestionText.innerText = data.suggestion;
            } catch (error) {
                console.error('Error:', error);
                suggestionText.innerHTML = '<div class="alert alert-danger">neri al覺n覺rken bir hata olutu.</div>';
            }
        });
    </script>
}
