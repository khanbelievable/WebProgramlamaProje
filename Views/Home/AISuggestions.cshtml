@{
    ViewData["Title"] = "AI Egzersiz Önerisi";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-info text-white">
                <h4 class="mb-0"><i class="bi bi-robot"></i> AI Egzersiz Asistanı</h4>
            </div>
            <div class="card-body p-4">
                <p>Hedefinizi ve seviyenizi seçin, size özel egzersiz önerimizi hazırlayalım.</p>
                
                <div class="mb-3">
                    <label class="form-label fw-bold">Hedefiniz</label>
                    <select id="goal" class="form-select">
                        <option value="kilo verme">Kilo Vermek</option>
                        <option value="kas kütlesi">Kas Kütlesi Artırmak</option>
                        <option value="genel saglık">Genel Sağlık ve Zindelik</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Seviyeniz</label>
                    <select id="level" class="form-select">
                        <option value="baslangic">Başlangıç</option>
                        <option value="orta">Orta</option>
                        <option value="ileri">İleri</option>
                    </select>
                </div>

                <div class="d-grid mb-4">
                    <button id="getSuggestion" class="btn btn-info text-white btn-lg">Öneriyi Getir</button>
                </div>

                <div id="resultCard" class="card bg-light d-none">
                    <div class="card-body">
                        <h5 class="card-title text-info"><i class="bi bi-lightbulb"></i> Önerilen Plan:</h5>
                        <p id="suggestionText" class="card-text lead"></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('getSuggestion').addEventListener('click', function() {
            const goal = document.getElementById('goal').value;
            const level = document.getElementById('level').value;
            
            fetch(`/api/WorkoutSuggestions?goal=${encodeURIComponent(goal)}&level=${encodeURIComponent(level)}`)
                .then(response => response.json())
                .then(data => {
                    document.getElementById('suggestionText').innerText = data.suggestion;
                    document.getElementById('resultCard').classList.remove('d-none');
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Öneri alınırken bir hata oluştu.');
                });
        });
    </script>
}
