@model WebProgramlamaProje.Models.Appointment

@{
    ViewData["Title"] = "Yeni Randevu";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0">Yeni Randevu Oluştur</h4>
            </div>
            <div class="card-body p-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="TrainerId" class="control-label fw-bold"></label>
                        <select asp-for="TrainerId" class ="form-select" asp-items="ViewBag.TrainerId">
                            <option value="">Lütfen Eğitmen Seçin</option>
                        </select>
                        <span asp-validation-for="TrainerId" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="ServiceId" class="control-label fw-bold"></label>
                        <select asp-for="ServiceId" class ="form-select" asp-items="ViewBag.ServiceId">
                            <option value="">Lütfen Hizmet Seçin</option>
                        </select>
                        <span asp-validation-for="ServiceId" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="AppointmentDate" class="control-label fw-bold"></label>
                        <input asp-for="AppointmentDate" class="form-control" type="datetime-local" />
                        <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Notes" class="control-label fw-bold"></label>
                        <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success btn-lg">Randevu Talebi Gönder</button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Listeye Dön</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
