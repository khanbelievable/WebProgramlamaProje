@model IEnumerable<WebProgramlamaProje.Models.Appointment>

@{
    ViewData["Title"] = "Randevularƒ±m";
}

<div class="page-header mb-5">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="display-5 fw-bold gradient-text mb-2">Randevularƒ±m</h1>
            <p class="lead text-secondary">Aktif ve ge√ßmi≈ü randevularƒ±nƒ±z</p>
