@model IEnumerable<WebProgramlamaProje.Models.Appointment>

@{
    ViewData["Title"] = "Randevularım";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Randevular</h1>
    <a asp-action="Create" class="btn btn-success">Yeni Randevu Al</a>
</div>

<div class="table-responsive">
    <table class="table table-hover align-middle">
        <thead class="table-light">
            <tr>
                @if (User.IsInRole("Admin")) {
                    <th>Üye</th>
                }
                <th>Eğitmen</th>
                <th>Hizmet</th>
                <th>Tarih</th>
                <th>Durum</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    @if (User.IsInRole("Admin")) {
                        <td>@item.ApplicationUser?.FullName</td>
                    }
                    <td>@item.Trainer?.Name</td>
                    <td>@item.Service?.Name</td>
                    <td>@item.AppointmentDate.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>
                        @if (item.IsConfirmed) {
                            <span class="badge bg-success">Onaylandı</span>
                        } else {
                            <span class="badge bg-warning text-dark">Beklemede</span>
                        }
                    </td>
                    <td>
                        @if (User.IsInRole("Admin") && !item.IsConfirmed) {
                            <form asp-action="Confirm" asp-route-id="@item.Id" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-sm btn-outline-success">Onayla</button>
                            </form>
                        }
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">İptal Et</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
