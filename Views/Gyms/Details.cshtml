@model WebProgramlamaProje.Models.Gym

@{
    ViewData["Title"] = "Salon Detaylarƒ±";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">üèãÔ∏è @Model.Name</h3>
                    @if (User.IsInRole("Admin"))
                    {
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">
                                <span class="me-1">‚úèÔ∏è</span> D√ºzenle
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-sm">
                                <span class="me-1">üóëÔ∏è</span> Sil
                            </a>
                        </div>
                    }
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12 mb-4">
                        <div class="gym-image-display">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded" />
                            }
                            else
                            {
                                <div class="no-image-placeholder">
                                    <span class="placeholder-icon">üèãÔ∏è</span>
                                    <p>G√∂rsel Yok</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                
                <div class="gym-details">
                    <div class="detail-item">
                        <span class="detail-icon">üìç</span>
                        <div class="detail-content">
                            <strong>Adres:</strong>
                            <p>@Model.Address</p>
                        </div>
                    </div>
                    
                    <div class="detail-item">
                        <span class="detail-icon">üìû</span>
                        <div class="detail-content">
                            <strong>Telefon:</strong>
                            <p>@Model.PhoneNumber</p>
                        </div>
                    </div>
                    
                    @if (Model.Trainers != null && Model.Trainers.Any())
                    {
                        <div class="detail-item">
                            <span class="detail-icon">üí™</span>
                            <div class="detail-content">
                                <strong>Eƒüitmenler (@Model.Trainers.Count):</strong>
                                <ul class="list-unstyled mt-2">
                                    @foreach (var trainer in Model.Trainers)
                                    {
                                        <li class="trainer-item">
                                            <a asp-controller="Trainers" asp-action="Details" asp-route-id="@trainer.Id">
                                                @trainer.Name - <span class="text-muted">@trainer.Specialty</span>
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    }
                </div>
                
                <div class="mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <span class="me-2">‚Ü©Ô∏è</span> Salon Listesine D√∂n
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .gym-image-display {
        max-height: 400px;
        overflow: hidden;
        border-radius: 12px;
        background: var(--surface-primary);
    }

    .gym-image-display img {
        width: 100%;
        height: auto;
        object-fit: cover;
    }

    .no-image-placeholder {
        height: 300px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, var(--surface-primary), var(--surface-elevated));
    }

    .no-image-placeholder .placeholder-icon {
        font-size: 5rem;
        opacity: 0.3;
        margin-bottom: 1rem;
    }

    .gym-details {
        margin-top: 2rem;
    }

    .detail-item {
        display: flex;
        gap: 1rem;
        padding: 1.5rem;
        margin-bottom: 1rem;
        background: rgba(0, 245, 255, 0.05);
        border-left: 3px solid var(--neon-cyan);
        border-radius: 8px;
    }

    .detail-icon {
        font-size: 2rem;
        flex-shrink: 0;
    }

    .detail-content {
        flex: 1;
    }

    .detail-content strong {
        color: var(--neon-cyan);
        display: block;
        margin-bottom: 0.5rem;
    }

    .detail-content p {
        color: var(--text-secondary-color);
        margin: 0;
    }

    .trainer-item {
        padding: 0.5rem 0;
        border-bottom: 1px solid rgba(0, 245, 255, 0.1);
    }

    .trainer-item:last-child {
        border-bottom: none;
    }

    .trainer-item a {
        color: var(--text-primary-color);
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .trainer-item a:hover {
        color: var(--neon-cyan);
        padding-left: 0.5rem;
    }
</style>
