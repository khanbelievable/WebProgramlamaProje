@model IEnumerable<WebProgramlamaProje.Models.Gym>

@{
    ViewData["Title"] = "Spor Salonlarımız";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@ViewData["Title"]</h1>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Create" class="btn btn-primary">Yeni Salon Ekle</a>
    }
</div>

<div class="row">
    @foreach (var item in Model) {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                @if (!string.IsNullOrEmpty(item.ImageUrl)) {
                    <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: cover;">
                } else {
                    <div class="bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 200px;">
                        <span>Görsel Yok</span>
                    </div>
                }
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text text-muted small">
                        <i class="bi bi-geo-alt"></i> @item.Address
                    </p>
                    <p class="card-text">
                        <strong>Telefon:</strong> @item.PhoneNumber
                    </p>
                </div>
                <div class="card-footer bg-white border-top-0 d-flex justify-content-between">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm">Detaylar</a>
                    @if (User.IsInRole("Admin")) {
                        <div>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm">Düzenle</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Sil</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>
