@model IEnumerable<WebProgramlamaProje.Models.Trainer>

@{
    ViewData["Title"] = "Eğitmenlerimiz";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@ViewData["Title"]</h1>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Create" class="btn btn-primary">Yeni Eğitmen Ekle</a>
    }
</div>

<div class="row">
    @foreach (var item in Model) {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body">
                    <div class="text-center mb-3">
                        @if (!string.IsNullOrEmpty(item.ImageUrl)) {
                            <img src="@item.ImageUrl" class="rounded-circle" alt="@item.Name" style="width: 120px; height: 120px; object-fit: cover;">
                        } else {
                            <div class="rounded-circle bg-light d-inline-flex align-items-center justify-content-center" style="width: 120px; height: 120px;">
                                <i class="bi bi-person-fill display-4 text-secondary"></i>
                            </div>
                        }
                    </div>
                    <h5 class="card-title text-center">@item.Name</h5>
                    <p class="text-primary text-center font-weight-bold">@item.Specialty</p>
                    <p class="card-text text-muted small text-center">
                        <i class="bi bi-house-door"></i> @item.Gym?.Name
                    </p>
                    <p class="card-text">@item.Description</p>
                </div>
                <div class="card-footer bg-white border-top-0 d-flex justify-content-around">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">Profil</a>
                    <a asp-controller="Appointments" asp-action="Create" asp-route-trainerId="@item.Id" class="btn btn-sm btn-success">Randevu Al</a>
                    @if (User.IsInRole("Admin")) {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                    }
                </div>
            </div>
        </div>
    }
</div>
